{
	"$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "module": "es2015",
		"target": "es5",
		"moduleResolution": "node",

		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"removeComments": true,
        "noEmitOnError": true,
		
		"strict": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,

        "lib": ["es2015"],
		"skipLibCheck": true
    }
}

{
	"$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "module": "ES2015",
		"target": "ES2017",
		"moduleResolution": "node",

		"removeComments": true,
        "noEmitOnError": true,
		
		"strict": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,

		"skipLibCheck": true
    }
}

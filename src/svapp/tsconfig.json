{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "compilerOptions": {
    "strict": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
  },

  "include": ["./**/*", "../lib/**/*"],
  "exclude": ["node_modules/*"],
}

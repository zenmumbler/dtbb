{
    "compilerOptions": {
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "rootDir": "..",
        "outDir": "../../import/build",
        "noEmitOnError": true,
        "diagnostics": false,
        "listFiles": false,

        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": false,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,

        "lib": ["es5", "dom", "es2015"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": false,

        "removeComments": true,
        "sourceMap": false
    },
    "include": [
        "../lib/**/*.ts",
        "./**/*.ts"
    ]
}

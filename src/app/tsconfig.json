{
    "compilerOptions": {
        "module": "es6",
        "target": "es5",
        "rootDir": "..",
        "outDir": "../../site/build/app",
        "noEmitOnError": true,
        "diagnostics": false,
        "listFiles": false,

		"strict": true,
		"noImplicitReturns": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,

		"lib": ["dom", "es5", "es2015", "es2016", "es2017"],
		"skipLibCheck": false,
		"skipDefaultLibCheck": true,

        "removeComments": true,
        "sourceMap": false
    },
    "include": [
        "../lib/**/*.ts",
        "../workers/**/*.ts",
        "./**/*.ts"
    ]
}
